---
interface Props {
  title: string;
  subtitle?: string;
  href?: string;
  linkText?: string;
  centered?: boolean;
}

const { title, subtitle, href, linkText = 'Voir tout', centered = false } = Astro.props;
---

<div class:list={[
  'mb-8 md:mb-12',
  centered ? 'text-center' : 'flex flex-col md:flex-row md:items-end md:justify-between gap-4'
]}>
  <div>
    <h2 class="font-serif text-3xl md:text-4xl text-[--color-primary-dark]">
      {title}
    </h2>
    {subtitle && (
      <p class="mt-2 text-[--color-text-light] text-lg">
        {subtitle}
      </p>
    )}
  </div>

  {href && !centered && (
    <a
      href={href}
      class="inline-flex items-center gap-2 text-[--color-primary] hover:text-[--color-primary-dark] transition-colors group"
    >
      <span class="text-sm uppercase tracking-wide">{linkText}</span>
      <svg
        class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  )}
</div>
