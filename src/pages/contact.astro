---
import BaseLayout from '@layouts/BaseLayout.astro';

const socialLinks = [
  {
    href: 'https://www.instagram.com/laetitiaroux_ecrivaine/',
    label: 'Instagram',
    icon: 'instagram',
  },
  {
    href: 'https://www.linkedin.com/in/laetitia-roux/',
    label: 'LinkedIn',
    icon: 'linkedin',
  },
  {
    href: 'https://laetitiaroux.substack.com/',
    label: 'Substack',
    icon: 'substack',
  },
];
---

<BaseLayout
  title="Contact"
  description="Contactez Laetitia Roux pour vos projets d'écriture sur la nature et l'environnement."
>
  <section class="py-16 md:py-24 px-4">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Titre -->
      <h1 class="font-serif text-4xl md:text-5xl text-[--color-primary-dark] mb-6">
        Contact
      </h1>
      <p class="text-xl text-[--color-text-light] mb-12">
        Vous avez un projet d'écriture sur la nature ou l'environnement ?
        N'hésitez pas à me contacter.
      </p>

      <!-- Coordonnées -->
      <div class="bg-[--color-bg-alt] rounded-sm p-8 md:p-12 mb-12">
        <div class="space-y-6">
          <!-- Email -->
          <div>
            <p class="text-sm uppercase tracking-wide text-[--color-text-light] mb-2">
              Email
            </p>
            <a
              href="mailto:contact@laetitiaroux-redaction.com"
              class="text-xl md:text-2xl font-serif text-[--color-primary] hover:text-[--color-primary-dark] transition-colors"
            >
              contact@laetitiaroux-redaction.com
            </a>
          </div>
        </div>
      </div>

      <!-- Réseaux sociaux -->
      <div>
        <p class="text-sm uppercase tracking-wide text-[--color-text-light] mb-6">
          Retrouvez-moi sur
        </p>
        <div class="flex items-center justify-center gap-6">
          {socialLinks.map(({ href, label, icon }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-5 py-3 bg-[--color-bg-alt] rounded-sm text-[--color-text] hover:bg-[--color-primary] hover:text-white transition-colors group"
            >
              {icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {icon === 'substack' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/>
                </svg>
              )}
              <span class="text-sm font-medium">{label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
